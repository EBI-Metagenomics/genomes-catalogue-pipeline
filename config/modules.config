/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {
    withName: CHECKM2_NCBI {
        publishDir = [
        path: "${params.outdir}/additional_data/intermediate_files",
        pattern: "checkm_quality.csv",
        saveAs: { "checkm_quality_ncbi_genomes.csv" },
        mode: 'copy'
        ]
    }

    withName: CHECKM2_CATALOGUE {
        publishDir = [
        path: "${params.outdir}/additional_data/update_execution_reports",
        pattern: "checkm_quality.csv",
        saveAs: { "checkm_quality_previous_catalogue_version_recomputed.csv" },
        mode: 'copy'
        ]
    }
    
}

